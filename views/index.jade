extends layout

block content
  body
    header
      include ./nav.jade
    .bablot-intro
      img(src='assets/crown.svg')
      .bablot-intro--mesage Instant responses, crazy smart bots.
    .bablot-wrapper
      .bablot-chat-panel
        img(src="assets/demo.gif" width="290px")
      .bablot-about-panel
        .bablot-about
          .bablot-about--header Rent It Easy
          .bablot-about--message
            p Bablot is a chat bot that helps you find a place to live.
            p
              | It uses artificial intelligence to get you personalized results
              | quickly and easily.
            p If you have any questions about finding a place, just ask Sir Bablot!
      .bablot-contact-panel
        .bablot-contact
          .bablot-contact--header We don't bite
          .bablot-contact--phone
            img(src='assets/phone.svg')
            a(href='tel:226-378-8121') 226 378 8121
          .bablot-contact--email
            img(src='assets/email.svg')
            a(href='mailto:yourfriends@bablot.co?Subject=Hello!') yourfriends@bablot.co
    footer.bablot-footer
